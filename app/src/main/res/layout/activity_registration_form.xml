<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_screen">


    <FrameLayout
        android:id="@+id/activity_reg_form_fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <Button
            fontPath="fonts/Roboto-Regular.ttf"
            android:id="@+id/activity_reg_form_btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/skip"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/bg_button_cancel"
            android:textAllCaps="false"/>

        <Button
            fontPath="fonts/Roboto-Regular.ttf"
            android:id="@+id/activity_reg_form_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/activity_registration_form_btn_next_step"
            android:layout_weight="1"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_button_white"
            android:textColor="@color/button_blue_color"
            android:textAllCaps="false" />
    </LinearLayout>
    
</LinearLayout>